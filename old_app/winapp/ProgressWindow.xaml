<Window x:Class="LabinLightScan.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabinLightScan"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="140" Width="399.209" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" WindowStyle="None" SizeToContent="WidthAndHeight" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid Margin="0">
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Setter Property="Height" Value="140"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Height_Extended}" Value="True">
                        <Setter Property="Height" Value="180"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <ProgressBar Height="31" Margin="25,30,25,0" VerticalAlignment="Top" IsIndeterminate="True" Width="233" RenderTransformOrigin="0.5,0.5"/>
        <Label x:Name="Label_Progress_Info" Content="Working in progress......&#xA;&#xA;Please wait..." Margin="36,75,29,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="65" Width="326" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Button" Content=" Cancel " Margin="40,0,40,20" VerticalAlignment="Bottom" Width="75" Click="Button_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Btn_Hidden}" Value="True">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
