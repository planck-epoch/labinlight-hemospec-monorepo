<Window x:Class="LabinLightScan.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calibração" Height="220" Width="400" WindowStartupLocation="CenterOwner"     
       ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Por favor coloque a tampa no HemoSpec para dar inicio ao processo de calibração." TextWrapping="Wrap" FontWeight="Bold" Margin="0,0,0,10"/>
            <CheckBox x:Name="LidCheckBox" Content="Confirmo que a tampa está do dispositivo" Checked="LidCheckBox_Checked" Unchecked="LidCheckBox_Checked"/>
            <TextBlock x:Name="TempText" Text="Temperatura: --°C" Margin="0,10,0,0"/>
            <TextBlock x:Name="TempWarning" Text="Necessária temperatura superior a 25°C." Foreground="Red" Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
                <Button x:Name="StartCalibrationButton" Content="Iniciar Calibração" IsEnabled="False" Click="StartCalibrationButton_Click" Width="120" Margin="0,0,10,0"/>
                <Button x:Name="SkipButton" Content="Adiar" Click="SkipButton_Click" Width="80" Visibility="Collapsed"/>
            </StackPanel>
            <TextBlock x:Name="ErrorText" Text="" Foreground="Red" Visibility="Collapsed" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>