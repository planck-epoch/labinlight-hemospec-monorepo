<Window x:Class="LabinLightScan.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabinLightScan"
        mc:Ignorable="d"
        Title="LicenseWindow" Height="600" Width="800" FontFamily="Calibri" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TextBlock x:Name="TextBlock_License" TextWrapping="Wrap" Margin="5,0"/>
        </ScrollViewer>
        <Button x:Name="Button_OK" Content="OK" Grid.Row="1" Width="75" Margin="0,5" Click="Button_OK_Click"/>

    </Grid>
</Window>
