<Page
    x:Class="ISC_BLE_SDK.Scenario3_DeviceInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ISC_BLE_SDK"
    mc:Ignorable="d">
    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <TextBlock Text="Device Information:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" Text="General information of connected ISC device"/>
            <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" Text="This scenario shows the reading of the general information of the connected device."/>
            <TextBlock Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="0,10,0,0">
                Selected device: <Run x:Name="SelectedDeviceRun" FontWeight="Bold"/>
            </TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RefreshButton" Content="Refresh" Click="{x:Bind RefreshButton_Click}" Margin="18,10,20,10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"/>
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="BLE Advertising Name"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Advertising_Name" Text="Advertising_Name"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Manufacturer"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="MFG_Name" Text="MFG_Name"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="2" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Model Name"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Model_Name" Text="Model_Name"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="3" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Serial Number"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Serial_Number" Text="Serial_Number"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="4" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Device UUID"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Device_UUID" Text="Device_UUID"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="5" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Hardware Revision"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Hardware_Revision" Text="Hardware_Revision"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="6" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Tiva Firmware Revision"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Tiva_Firmware_Revision" Text="Tiva_Firmware_Revision"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="7" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Spectrum Library Revision"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Spectrum_Library_Revision" Text="Spectrum_Library_Revision"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="8" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Temperature"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Temp" Text="Temp"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="9" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Humidity"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Humi" Text="Humi"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="10" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Battery Capacity"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Batt_Lv" Text="Batt_Lv"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="11" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Lamp Usage"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="Lamp_Usage" Text="Lamp_Usage"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="12" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Activation Status"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="ActivateState" Text="Activate_State"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="13" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Device Status"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="DeviceStatus" Text="Device_Status"/></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="14" Margin="10,5,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Style="{StaticResource DeviceInfoLabelTextStyle}" Text="Error Status"/>
                    <TextBlock Style="{StaticResource DeviceInfoValueTextStyle}"><Run x:Name="ErrorStatus" Text="Error_Status"/></TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
