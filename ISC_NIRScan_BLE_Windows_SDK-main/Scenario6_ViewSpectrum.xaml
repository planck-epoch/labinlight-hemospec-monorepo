<Page
    x:Class="ISC_BLE_SDK.Scenario6_ViewSpectrum"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="using:OxyPlot.Windows"
    xmlns:local="using:ISC_BLE_SDK"
    mc:Ignorable="d"
    Loaded="Scenario6_ViewSpectrum_Loaded">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <oxy:PlotView x:Name="plotView" Grid.Row="0" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton x:Name="RadioButton_Reflectance" Content="Reflectance" GroupName="Plot_Type" HorizontalAlignment="Center" Checked="RadioButtonPlotType_Checked"/>
            <RadioButton x:Name="RadioButton_Absorbance" Content="Absorbance" GroupName="Plot_Type" IsChecked="True" HorizontalAlignment="Center" Checked="RadioButtonPlotType_Checked"/>
            <RadioButton x:Name="RadioButton_Intensity" Content="Intensity" GroupName="Plot_Type" HorizontalAlignment="Center" Checked="RadioButtonPlotType_Checked"/>
            <RadioButton x:Name="RadioButton_Reference" Content="Reference" GroupName="Plot_Type" HorizontalAlignment="Center" Checked="RadioButtonPlotType_Checked"/>
        </StackPanel>
    </Grid>
</Page>
