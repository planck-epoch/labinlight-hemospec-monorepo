<Page
    x:Class="ISC_BLE_SDK.Scenario5_PerformScan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ISC_BLE_SDK"
    mc:Ignorable="d"
    Loaded="Scenario5_PerformScan_Loaded">
    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <TextBlock Text="Quick Scan:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" Text="This scenario demostrates a quick scan by device active configuration and interpret the scan data."/>
            <TextBlock Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="0,10,0,0">
                Quick Scan: <Run x:Name="QuickScanRun" FontWeight="Bold"/>
            </TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ScanButton" Content="Scan" Click="{x:Bind ScanButton_Click}" Margin="18,10,20,10"/>
            </StackPanel>
            <TextBlock Text="Reference Setting:" Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="RadioButton_RefNew" Content="New" GroupName="Ref_Tyoe" HorizontalAlignment="Center" Checked="RadioButtonRefType_Checked" Margin="20,0,0,0"/>
                <RadioButton x:Name="RadioButton_RefPrevious" Content="Previous" GroupName="Ref_Tyoe" IsEnabled="False" HorizontalAlignment="Center" Checked="RadioButtonRefType_Checked"/>
                <RadioButton x:Name="RadioButton_RefBuiltIn" Content="Built-in" GroupName="Ref_Tyoe" IsChecked="True" HorizontalAlignment="Center" Checked="RadioButtonRefType_Checked"/>
            </StackPanel>
            <TextBlock Text="Device Settings:" Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Lamp Mode" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <RadioButton x:Name="RadioButton_LampAuto" Content="Auto" GroupName="Lamp_Mode" Margin="35,0,0,0" HorizontalAlignment="Center" IsChecked="True" Checked="RadioButtonLampMode_Checked"/>
                <RadioButton x:Name="RadioButton_LampOn" Content="On" GroupName="Lamp_Mode" HorizontalAlignment="Center" Checked="RadioButtonLampMode_Checked"/>
                <RadioButton x:Name="RadioButton_LampOff" Content="Off" GroupName="Lamp_Mode" HorizontalAlignment="Center" Checked="RadioButtonLampMode_Checked"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Lamp Stable-Time(ms)" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <TextBox x:Name="TextBox_Lamp_Time"  Margin="35,0,0,0" HorizontalAlignment="Center" Text="625"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PGA" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <ComboBox x:Name="ComboBoxPGA"  Margin="35,0,0,0" HorizontalAlignment="Center" IsEditable="False" SelectedIndex="0" SelectionChanged="ComboBoxPGA_SelectionChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Lock Device Button" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <RadioButton x:Name="RadioButton_LockOff" Content="Off" GroupName="DevBtn" Margin="35,0,0,0" HorizontalAlignment="Center"  IsChecked="True" Checked="RadioButtonDevBtn_Checked"/>
                <RadioButton x:Name="RadioButton_LockOn" Content="On" GroupName="DevBtn" HorizontalAlignment="Center" Checked="RadioButtonDevBtn_Checked"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ViewReportFolder" Content="View Report Folder" Click="{x:Bind ViewReportFolder_Click}" Margin="18,10,20,10"/>
                <Button x:Name="ClearErrorButton" Content="Clear Error" Click="{x:Bind ClearErrorButton_Click}" Margin="0,10,20,10"/>
            </StackPanel>
            <TextBlock Text="Error Status" Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="0,10,0,0"/>
            <TextBlock Name="TextBox_ErrorMsg"  Text="" TextWrapping="Wrap" Margin="20,0,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
