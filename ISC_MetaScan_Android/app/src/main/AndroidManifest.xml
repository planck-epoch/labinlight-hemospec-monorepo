<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.Innospectra.MetaScan">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"  android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"  android:maxSdkVersion="30"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application android:requestLegacyExternalStorage="true"
        tools:replace="allowBackup"
        android:allowBackup="true"
        android:icon="@mipmap/icon_isc_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.Innospectra.MetaScan.HomeViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Innospectra.MetaScan.MainSelectConfigViewActivity"
            android:label="@string/action_settings"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.InformationViewActivity"
            android:label="@string/title_activity_info"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.SettingsViewActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <service
            android:name="com.ISCMetaScanSDK.ISCMetaScanSDK"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.Innospectra.MetaScan.SelectDeviceViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.Innospectra.MetaScan.LicenseViewActivity"
            android:label="@string/license"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.DeviceStatusViewActivity"
            android:label="@string/device"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.AdvanceErrorStatusViewActivity"
            android:label="@string/device"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.SelectConfigViewActivity"
            android:label="@string/select_config"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.QuicksetViewActivity"
            android:label="@string/quickset_config"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.ScanViewActivity"
            android:label="@string/scan"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.ListReportActivity"
            android:label="@string/action_reports"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.ShowReportActivity"
            android:label="@string/action_report"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.WarmUpViewActivity"
            android:label="@string/warmup"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.Innospectra.MetaScan.CurrentConfigViewActivity"
            android:label="@string/title_currentconfig"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

    </application>

</manifest>
