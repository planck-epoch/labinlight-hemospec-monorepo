<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_main">

    <RelativeLayout
        android:id="@+id/rl_graph_list"
        android:layout_width="match_parent"
        android:layout_height="448dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/dip8"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dip8">


        <ScrollView
            android:id="@+id/layout_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:id="@+id/lb_reference"
                    android:layout_below="@id/viewpager"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/reference"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_referencename"
                    android:layout_below="@id/viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_reference"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="false"
                    android:text="aaaaaaaaaabbbbbbccccc"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/lb_config"
                    android:layout_below="@id/lb_reference"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/config_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_config"
                    android:layout_below="@id/lb_reference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_config"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="false"
                    android:text="aaaaaaaaaabbbbbb"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/lb_scan_repeats"
                    android:layout_below="@id/lb_config"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_repeat"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_scan_repeat"
                    android:layout_below="@id/lb_config"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_scan_repeats"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="true"
                    android:text="6"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_below="@id/tv_scan_repeat"
                    android:id="@+id/lb_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <Button
                    android:layout_below="@id/tv_scan_repeat"
                    android:layout_marginTop="20dp"
                    android:id="@+id/btn_section1"
                    android:layout_toRightOf="@id/lb_section"
                    android:layout_marginLeft="@dimen/dip32"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="1"
                    android:textColor="@color/white" />

                <Button
                    android:layout_below="@id/tv_scan_repeat"
                    android:layout_marginTop="20dp"
                    android:id="@+id/btn_section2"
                    android:layout_toRightOf="@id/btn_section1"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="2"
                    android:textColor="@color/white" />

                <Button
                    android:layout_below="@id/tv_scan_repeat"
                    android:layout_marginTop="20dp"
                    android:id="@+id/btn_section3"
                    android:layout_toRightOf="@id/btn_section2"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="3"
                    android:textColor="@color/white" />

                <Button
                    android:layout_below="@id/tv_scan_repeat"
                    android:layout_marginTop="20dp"
                    android:id="@+id/btn_section4"
                    android:layout_toRightOf="@id/btn_section3"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="4"
                    android:textColor="@color/white" />

                <Button
                    android:layout_below="@id/tv_scan_repeat"
                    android:layout_marginTop="20dp"
                    android:id="@+id/btn_section5"
                    android:layout_toRightOf="@id/btn_section4"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/lb_scan_type"
                    android:layout_below="@id/lb_section"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_Type"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_scantype"
                    android:layout_below="@id/lb_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_scan_type"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="true"
                    android:text="Column"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/lb_scan_width"
                    android:layout_below="@id/lb_scan_type"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_width"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_scan_width"
                    android:layout_below="@id/lb_scan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_scan_width"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="true"
                    android:text="7.03"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/lb_scan_start"
                    android:layout_below="@id/lb_scan_width"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/spec_start"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_scan_start"
                    android:layout_below="@id/lb_scan_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_scan_start"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="true"
                    android:text="900"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/lb_scan_end"
                    android:layout_below="@id/lb_scan_start"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/spec_end"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_scan_end"
                    android:layout_below="@id/lb_scan_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_scan_end"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="true"
                    android:text="1700"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/lb_scan_res"
                    android:layout_below="@id/lb_scan_end"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/res"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/tv_scan_res"
                    android:layout_below="@id/lb_scan_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_scan_res"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:singleLine="true"
                    android:text="228"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/lb_scan_exposuretime"
                    android:layout_below="@id/lb_scan_res"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ex_time"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/tv_scan_exposuretime"
                    android:layout_below="@id/lb_scan_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_scan_exposuretime"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginBottom="20dp"
                    android:singleLine="true"
                    android:text="0.635"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>