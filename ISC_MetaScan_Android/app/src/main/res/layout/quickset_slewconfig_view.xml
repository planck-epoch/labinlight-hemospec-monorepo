<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white">
        <ProgressBar
            android:id="@+id/calProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/progressBarinsideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calProgress"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="@string/set_config"
            android:visibility="gone"/>

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/tmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lb_configname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/config_name"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_configname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/lb_configname"
                    android:background="@drawable/edittext_style"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_scan_repeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_configname"
                    android:layout_marginTop="15dp"
                    android:text="@string/scan_repeat"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_scan_repeats"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_configname"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:singleLine="true"
                    android:text="6"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_sections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_scan_repeats"
                    android:layout_marginTop="15dp"
                    android:text="@string/total_sections"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_sections"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/et_scan_repeats"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_sections"
                    android:layout_marginTop="20dp"
                    android:text="@string/section"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_section1"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/lb_sections"
                    android:layout_marginLeft="@dimen/dip16"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/lb_section"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="1"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_section2"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/lb_sections"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/btn_section1"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="2"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_section3"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/lb_sections"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/btn_section2"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="3"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_section4"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/lb_sections"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/btn_section3"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="4"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_section5"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/lb_sections"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/btn_section4"
                    android:layout_weight="0.15"
                    android:background="@android:color/holo_blue_dark"
                    android:text="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/lb_scan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_section"
                    android:layout_marginTop="15dp"
                    android:text="@string/scan_Type"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_scan_type"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/lb_section"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_scan_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_scan_type"
                    android:layout_marginTop="15dp"
                    android:text="@string/scan_width"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_scan_width"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/lb_scan_type"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_scan_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_scan_width"
                    android:layout_marginTop="15dp"
                    android:text="@string/spec_start"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_scan_start"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lb_scan_width"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:singleLine="true"
                    android:text="900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_scan_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_scan_start"
                    android:layout_marginTop="15dp"
                    android:text="@string/spec_end"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_scan_end"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lb_scan_start"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:singleLine="true"
                    android:text="1700"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_scan_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_scan_end"
                    android:layout_marginTop="15dp"
                    android:text="@string/res"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_scan_res"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lb_scan_end"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:singleLine="true"
                    android:text="3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_scan_exposuretime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_scan_res"
                    android:layout_marginTop="15dp"
                    android:text="@string/ex_time"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_scan_exposuretime"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/lb_scan_res"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_style"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lb_section_res_validation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_scan_exposuretime"
                    android:layout_marginTop="20dp"
                    android:text="@string/sec_res_valid"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/lb_section_res_validation_value"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lb_scan_exposuretime"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:text="228/356"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/lb_total_res_validation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lb_section_res_validation_value"
                    android:layout_marginTop="20dp"
                    android:text="@string/total_res_valid"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/lbtotal_res_validation_value"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lb_section_res_validation_value"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:text="228/356"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/lb_oversampling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lbtotal_res_validation_value"
                    android:layout_marginTop="20dp"
                    android:text="@string/oversampling"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/img_tooltip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/lbtotal_res_validation_value"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/lb_oversampling"
                    android:layout_marginLeft="16dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_action_info" />

                <TextView
                    android:id="@+id/lb_oversampling_value"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbtotal_res_validation_value"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip8"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="0dp"
                    android:paddingLeft="@dimen/dip8"
                    android:paddingRight="@dimen/dip8"
                    android:text="0.2"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/led_connect"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/led_g"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_alignParentBottom="true"
            android:text="Connect"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp">
        </Button>

        <Button
            android:id="@+id/led_ble"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/led_b"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/led_connect"
            android:text="BLE"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp">
        </Button>

        <Button
            android:id="@+id/led_scan"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/leg_gray"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/led_ble"
            android:text="Scan"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp">
        </Button>
        <Button
            android:id="@+id/led_error"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/leg_gray"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Error"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp">
        </Button>
    </RelativeLayout>
</RelativeLayout>