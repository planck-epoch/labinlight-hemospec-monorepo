<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true" >
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="10dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="#00000000" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#00000000" android:endColor="#00000000"  />
        </shape>
    </item>

    <item android:state_selected="true" >
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="10dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="@color/royalblue" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#00000000" android:endColor="#00000000"  />
        </shape>
    </item>

    <!-- 預設時 -->
    <item android:color="@color/royalblue">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/royalblue" />
            <gradient android:angle="-90" android:startColor="#00000000" android:endColor="#00000000"  />
        </shape>
    </item>

</selector>